@model venditiun.Models.Job

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Czas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="JobCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Decription" class="control-label"></label>
                <input asp-for="Decription" class="form-control" />
                <span asp-validation-for="Decription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route="taskdetails" asp-route-id="@Model.Task.Id" asp-route-projectId="@Model.Task.ProjectId">Powrót do zadania</a>
</div>

